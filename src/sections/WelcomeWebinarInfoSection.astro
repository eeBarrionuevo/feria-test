---
import WelcomeWebinarInfoItem from "../components/welcome/WelcomeWebinarInfoItem.astro";
import { welcomeWebinarInfo } from "../data/data";
---

<section
  data-aos="fade-up"
  data-aos-duration="1000"
  class="max-w-6xl mx-auto text-white px-6 py-6 mb-6 md:px-6 md:py-14"
  aria-label="Sección de información recomendada para la feria virtual de Alumni Tecsup"
>
  <div class="flex flex-col items-center text-center">
    <h2 class="text-3xl font-extrabold leading-tight font-al mb-4">
      CHARLAS DE EMPLEABILIDAD
    </h2>

    <h3 class="text-lg font-light text-center mb-4">
      ¡Prepárate para dar el siguiente paso en tu carrera!
    </h3>

    <p class="text-base font-light text-center mb-6">
      Participa en nuestros webinars y descubre tips, herramientas y estrategias
      para destacar en tus procesos de selección.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-4">
      {welcomeWebinarInfo.map((item) => <WelcomeWebinarInfoItem {...item} />)}
    </div>
  </div>
</section>
