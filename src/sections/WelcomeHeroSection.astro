---
import feriaInfo from "../assets/images/feria-info.png";
import feriaVideo from "../assets/images/feria-video.jpeg";
import LinkButtonCommon from "../components/buttons/LinkButtonCommon.astro";
import InputText from "../components/inputs/InputText.astro";
---

<section
  data-aos="fade-up"
  data-aos-duration="1000"
  class="max-w-6xl mx-auto text-white px-6 py-10 md:py-20"
  aria-label="Sección inicial de la feria virtual de Alumni Tecsup"
>
  <div
    class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-24 w-full"
  >
    <div class="w-full max-w-2xl order-2 md:order-1">
      <div
        class="bg-white/10 rounded-3xl border-dashed border-gray-50 border-[2px] px-6 py-12 md:px-14 md:py-12"
      >
        <h2 class="text-2xl font-medium leading-tight text-center mb-2">
          Conéctate con empresas <br />que buscan tu talento
        </h2>
        <p class="text-base font-light text-center mb-6">
          ¡Prepárate para participar en la Feria <br /> Laboral Virtual Tecsup!
        </p>

        <form action="" class="flex flex-col gap-3 mb-4">
          <InputText
            id="email"
            label="Correo electrónico Tecsup"
            type="email"
            placeholder="example@tecsup.edu.pe"
            pattern="^[a-zA-Z0-9._%+-]+@tecsup\.edu\.pe$"
            required
          />
          <LinkButtonCommon href="/home"> Ingresar </LinkButtonCommon>
        </form>

        <p class="text-base font-light text-center">
          ¿No te has registrado aún?
          <a href="/register" class="text-blime-bright font-bold">Regístrate</a>
        </p>
      </div>
    </div>

    <div
      class="w-full max-w-2xl flex flex-col items-center justify-center gap-2 text-center order-1 md:order-2"
    >
      <img src={feriaInfo.src} alt="Feria info" class="h-24" />
      <h1 class="sr-only text-4xl font-extrabold leading-tight font-al">
        FERIA VIRTUAL <br />ALUMNI TECSUP
      </h1>
      <div class="flex items-center gap-2 mb-2">
        <div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            style="fill: rgb(255, 255, 255);transform: ;msFilter:;"
            ><path
              d="M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z"
            ></path><path
              d="M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z"
            ></path></svg
          >
        </div>
        <time datetime="2025-11-25" class="text-lg font-bold block italic">
          Del 25 al 27 de noviembre
        </time>
      </div>

      <div
        id="videoThumbnail"
        class="relative w-full h-[240px] rounded-xl overflow-hidden shadow"
      >
        <iframe
          src="https://www.youtube.com/embed/cABGFm9KvqQ?autoplay=1&mute=0&controls=1&autohide=1&rel=0&loop=1&playlist=cABGFm9KvqQ"
          title="Auditorio virtual de la feria"
          class="w-full h-full object-cover"
          allow="autoplay; encrypted-media; picture-in-picture"
          allowfullscreen></iframe>
      </div>

      <p class="font-light leading-snug mt-4">
        Conecta con empresas y oportunidades exclusivas para egresados y
        estudiantes Tecsup, desde tu celular, tablet o computadora.
      </p>
    </div>
  </div>
</section>

<script>
  function initVideoThumbnail() {
    const thumbnail = document.getElementById("videoThumbnail");

    if (thumbnail) {
      thumbnail.addEventListener("click", () => {
        const videoId = thumbnail.dataset.videoId;

        if (videoId) {
          const event = new CustomEvent("openVideo", {
            detail: { videoId },
          });
          document.dispatchEvent(event);
        }
      });
    }
  }

  document.addEventListener("DOMContentLoaded", initVideoThumbnail);

  document.addEventListener("astro:after-swap", initVideoThumbnail);
</script>
