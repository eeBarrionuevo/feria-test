---
const { number, description } = Astro.props;
---

<div
  class="bg-white/10 rounded-3xl border-dashed border-gray-50 border-[2px] px-4 py-6 md:px-2 md:py-4 flex items-center"
>
  <div class="flex items-center justify-center gap-3">
    <dt class="text-4xl font-bold">+{number}</dt>
    <div class="text-sm leading-tight">
        {description}
    </div>
  </div>
</div>
